{
  "name": "blog/custom-mvc-blog",
  "author" : "Hanzala",
  "require": {
    "php" : "^7.4|^8.2.12",
    "vlucas/phpdotenv": "^5.6",
    "ext-pdo": "*",
    "nikic/fast-route": "^1.3",
    "ext-json": "*",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App",
      "Core\\": "src/Core",
      "Database\\": "src/Database/",
      "Traits\\": "src/Traits/",
      "Helpers\\": "src/Helpers/",
      "Exceptions\\": "src/Exceptions"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=PSR12 src tests",
    "phpcbf": "phpcbf --standard=PSR12 src tests",
    "db:install": "php setup-db/install.php",
    "db:drop" : "php setup-db/uninstall.php"
  }
}
